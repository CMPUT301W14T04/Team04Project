<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/LatDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="19dp"
        android:text="Latitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/LongDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LatDialog"
        android:layout_below="@+id/LatDialog"
        android:layout_marginTop="17dp"
        android:text="Longitude"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/longitudeChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/LatDialog"
        android:layout_alignBottom="@+id/LatDialog"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/LatDialog"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal" >


    </EditText>

    <EditText
        android:id="@+id/LatitudeChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/LongDialog"
        android:layout_toRightOf="@+id/LongDialog"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal" />

</RelativeLayout>